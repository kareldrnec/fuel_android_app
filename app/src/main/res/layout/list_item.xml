<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconItem"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/liGasStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconItem"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/liQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconItem"
        android:layout_below="@id/liGasStation"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/liTachometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconItem"
        android:layout_below="@id/liQuantity"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/liDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconItem"
        android:layout_below="@id/liTachometer"
        android:textSize="15sp"
        />


</RelativeLayout>